<UserControl x:Class="Caros.Pages.HomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:laurencebunnage="clr-namespace:TilePanel;assembly=TilePanel"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             Width="1024" Height="600">
    <Grid>
        <laurencebunnage:TilePanel>
            <metro:Tile Count="Music" cal:Message.Attach="LaunchMusic"
                Style="{DynamicResource CarosHomeTile}" />
        </laurencebunnage:TilePanel>
        <Button x:Name="SwitchUser" Content="Switch User" Width="300" Height="70" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20"/>
        <Button x:Name="UpdateSystem" Content="Update System" Width="300" Height="70" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,95,20,0"/>
        <Button x:Name="ShowToast" Content="Display toast" Width="300" Height="70" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,170,20,0"/>
        <Button x:Name="ShowKeyboard" Content="Show keyboard" Width="300" Height="70" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,245,20,0"/>
        <Button x:Name="ShowPrompt" Content="Show prompt" Width="300" Height="70" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,320,20,0"/>
    </Grid>
</UserControl>
